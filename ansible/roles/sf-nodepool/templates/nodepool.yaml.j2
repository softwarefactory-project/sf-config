# This file is managed by sfconfig, do not edit manually
---
elements-dir: {{ nodepool_conf_dir }}/elements:/usr/share/sf-elements
images-dir: {{ nodepool_lib_dir }}/dib
build-log-dir: /var/www/nodepool-log/
build-log-retention: {{ nodepool_build_log_retention|default(7) }}

webapp:
  port: {{ nodepool_webapp_port }}

zookeeper-servers:
  - host: {{ zookeeper_host }}
    port: 2181

zookeeper-tls:
  cert: {{ nodepool_conf_dir }}/ssl/zookeeper.crt
  key: {{ nodepool_conf_dir }}/ssl/zookeeper.key
  ca: {{ nodepool_conf_dir }}/ssl/localCA.pem

labels: []
providers: []
diskimages: []

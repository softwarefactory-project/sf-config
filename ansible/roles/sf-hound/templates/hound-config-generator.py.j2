import sys
import json
import urllib

config = {
   "max-concurrent-indexers": 2,
   "dbpath": "/var/lib/hound/data",
   "repos": {},
}

req = urllib.urlopen("{{ managesf_internal_url }}/resources")
data = json.loads(req.read())

for repo in data.get("resources", {}).get("repos", {}):
    config["repos"][repo] = {
        "url": "{{ gateway_url }}/r/%s.git" % repo,
        "url-pattern": {
            "base-url": "{{ gateway_url }}/r/gitweb?p=%s.git;a=blob;f={path}{anchor}" % repo,
            "anchor": "#l{line}",
        }
    }

orig = open(sys.argv[1], "r").read()
new = json.dumps(config, indent=True, sort_keys=True)

if orig != new:
    with open(sys.argv[1], "w") as of:
        of.write(new)
    exit(4)

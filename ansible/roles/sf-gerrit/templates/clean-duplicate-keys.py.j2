import requests
import json

password = "8c7c8e24-f5dc-423d-9fb2-f422d93a9238"
managesf_url = "{{ managesf_internal_url }}"
gerrit_url = "{{ gerrit_internal_url }}"

users = [user['username'] for user in
         requests.get("%s/services_users" % managesf_url,
                      headers={'X-Remote-User': 'admin'}).json()]
for user in users:
    account_url = "%sa/accounts/%s/sshkeys" % (gerrit_url, user)
    try:
        r = requests.get(account_url, auth=("admin", password))
        keys = json.loads(r.text[4:])
    except Exception:
        print("Couldn't get keys of %s" % user)
        continue
    to_delete = []
    for key in keys[:-1]:
        if key in keys:
            to_delete.append(key['seq'])
    if to_delete:
        print("Going to delete %d keys of user %s" % (len(to_delete), user))
    for key in to_delete:
        try:
            requests.delete("%s/%d" % (account_url, key),
                            auth=("admin", password))
        except Exception:
            print("Couldn't delete key %d of user %s" % (key, user))

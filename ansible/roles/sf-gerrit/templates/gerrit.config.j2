[gerrit]
    basePath = git
    canonicalWebUrl = {{ gerrit_pub_url }}
    gitHttpUrl =
    serverId = {{ gerrit_server_id }}
[auth]
{% if 'keycloak' in roles %}
    type = OAUTH
    trustedOpenId = ^.*$
    gitBasicAuthPolicy = HTTP
[plugin "gerrit-oauth-provider-keycloak-oauth"]
    root-url = https://{{ fqdn }}
    realm = {{ keycloak_default_realm }}
    client-id = gerrit
    client-secret = {{ keycloak_gerrit_client_secret }}
[oauth]
    allowRegisterNewEmail = true
{% else %}
    type = HTTP
    gitBasicAuth = true
    loginUrl = /r/login
    logoutUrl = /logout
{% endif %}
[container]
    user = gerrit
	startupTimeout = 300
    javaHome = /usr/lib/jvm/java-1.8.0-openjdk/jre/
    heapLimit = {{ gerrit_heap_limit }}
    war = /var/lib/gerrit/bin/gerrit.war
[sshd]
    listenAddress = *:29418
    idleTimeout = 2d
    maxConnectionsPerUser = {{ gerrit_max_ssh_connection_per_user }}
[httpd]
    listenUrl = proxy-https://0.0.0.0:{{ gerrit_port }}/r/
[commentlink "changeid"]
    match = (I[0-9a-f]{8,40})
    link = "#/q/$1"
[commentlink "testresult"]
    match = <li>([^ ]+) <a href=\"[^\"]+\" target=\"_blank\" rel=\"nofollow\">([^<]+)</a> : ([^ ]+)([^<]*)</li>
    html = <li class=\"comment_test\"><span class=\"comment_test_name\"><a href=\"$2\" rel=\"nofollow\">$1</a></span> <span class=\"comment_test_result\"><span class=\"result_$3\">$3</span>$4</span></li>
{% for commentlink in commentlinks %}
[commentlink "{{ commentlink.name }}"]
    match = "{{ commentlink.match }}"
    html = "{{ commentlink.html }}"
{% endfor %}
{% if 'gitweb' in roles %}
[gitweb]
    cgi = {{ gitweb_cgi }}
    type = gitweb
{% endif %}
[sendemail]
    enable = true
    from = MIXED
    smtpServer = 127.0.0.1
    smtpServerPort = 25
    smtpUser =
[download]
    scheme = ssh
    scheme = http
    scheme = anon_http
[suggest]
    accounts = true
    from = 2
[cache]
    directory = cache
[user]
    email = {{ gerrit_email }}
    home = /var/lib/gerrit
[plugins]
    allowRemoteAdmin = true
[mimetype "image/*"]
    safe = true
[mimetype "text/x-yaml"]
    safe = true
[mimetype "text/xml"]
    safe = true
[mimetype "application/xml"]
    safe = true
[mimetype "text/x-rst"]
    safe = true
[mimetype "text/plain"]
    safe = true
[mimetype "text/x-puppet"]
    safe = true
[mimetype "text/x-ini"]
    safe = true
[mimetype "text/x-properties"]
    safe = true
[mimetype "text/x-markdown"]
    safe = true
[mimetype "text/css"]
    safe = true
[index]
    type = LUCENE
	threads = 4
[receive]
    enableSignedPush = false

---
- job:
    name: base
    parent: null
    description: The base job.
    pre-run: playbooks/base/pre
    post-run:
      - playbooks/base/post
    roles:
      - zuul: zuul-jobs
    timeout: 1800
    # Set attempts to 1 until it's working well
    attempts: 1
    secrets:
      - site_sflogs
    nodes:
      - name: main
        label: centos-oci

- job:
    name: base-test
    parent: base
    pre-run: playbooks/base-test/pre
    post-run:
      - playbooks/base-test/post
    secrets:
      - site_sflogs

- job:
    name: linters
    parent: base
    run: playbooks/linters/run

- project:
    name: zuul-jobs
    check:
      jobs:
        - linters

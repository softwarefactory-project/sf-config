---
- job:
    name: base
    parent: null
    description: The base job.
    pre-run: playbooks/base/pre
    post-run:
      - playbooks/base/post
    roles:
      - zuul: zuul-jobs
    timeout: 1800
    # Set attempts to 1 until it's working well
    attempts: 1
    secrets:
      - site_sflogs
    nodeset:
      nodes:
        - name: main
          label: centos-oci

- job:
    name: linters
    parent: base
    description: A bash8, pip8, yamllint linter check.
    run: playbooks/linters/run

- project:
    name: zuul-jobs
    check:
      jobs:
        - linters
    gate:
      jobs:
        - linters

---
- hosts: localhost
  roles:
    - role: add-fileserver
      fileserver: "{{'{{'}} site_sflogs {{'}}'}}"

- hosts: "{{'{{'}} site_sflogs.fqdn {{'}}'}}"
  tasks:
    # Use a block because play vars doesn't take precedence on roles vars
    - block:
        - import_role: name=upload-logs
      vars:
        zuul_log_url: "https://{{ fqdn }}/logs"
        zuul_logserver_root: /var/www/logs

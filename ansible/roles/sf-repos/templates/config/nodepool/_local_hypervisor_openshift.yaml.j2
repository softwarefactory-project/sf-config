  - name: openshift-project
    min-ready: 0
  - name: openshift-pod-fedora
    min-ready: 0

{% endif %}{# endif nodepool_openshift_providers #}

{% for host in inventory %}{% if 'hypervisor-openshift' in host['roles'] %}


{% if not tenant_deployment %}
{% if 'hypervisor-runc' in roles %}

{% if nodepool.manage_default_runc_labels|default(True) %}
labels:
  - name: runc-centos
    min-ready: 2
{% endif %}

providers:
  - name: managed-runc-provider
    driver: runc
    pools:
{% for host in inventory %}
{% if 'hypervisor-runc' in host['roles'] %}
      - name: {{ host['hostname'] }}
        max-servers: {{ host.get('max-servers', 10) }}
{% if nodepool.manage_default_runc_labels|default(True) %}
        labels:
          - name: runc-centos
            username: zuul-worker
{% else %}
        labels: []
{% endif %}

{% endif %}
{% endfor %}
{% endif %}
{% endif %}

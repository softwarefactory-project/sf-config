---
- tenant:
    name: 'local'
    source:
{% if 'gerrit' in roles %}
      gerrit:
        config-projects:
          - zuul-jobs
{% endif %}
{% if zuul3_upstream_zuul_jobs %}
      {{ openstack_connection_name }}:
        untrusted-projects:
          - openstack-infra/zuul-jobs:
              include: job
              shadow: zuul-jobs
{% endif %}

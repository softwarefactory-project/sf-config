---
- tenant:
    name: 'local'
    source:
{% if 'gerrit' in roles %}
      gerrit:
{% else %}
      local-git:
{% endif %}
        config-projects:
          - config
        untrusted-projects:
          - sf-jobs
{% if not zuul_upstream_zuul_jobs %}
          - zuul-jobs:
              shadow: sf-jobs
{% endif %}
{% if zuul_upstream_zuul_jobs %}
      {{ openstack_connection_name }}:
        untrusted-projects:
          - openstack-infra/zuul-jobs:
              include:
                - job
              shadow: sf-jobs
{% endif %}

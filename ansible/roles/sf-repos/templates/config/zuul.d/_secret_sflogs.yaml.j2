- secret:
    name: site_sflogs
    data:
{% if tenant_deployment %}
      fqdn: {{ fqdn }}
{% else %}
      fqdn: {{ logserver_host }}
{% endif %}
      path: /var/www/logs
{% if tenant_deployment %}
      ssh_known_hosts: {{ fqdn }} ssh-rsa {{ hostvars[logserver_host].ansible_ssh_host_key_rsa_public }}
{% else %}
      ssh_known_hosts: {{ logserver_host }} ssh-rsa {{ hostvars[logserver_host].ansible_ssh_host_key_rsa_public }}
{% endif %}
      ssh_username: loguser
      {{ _sflogs_private_key_secret.stdout }}

import zuul.rpcclient
import sys
import socket

try:
    job_name = sys.argv[1]
    job_number = sys.argv[2]
except:
    print("usage: %s job-name job-number" % sys.argv[0])
    exit(1)

client = zuul.rpcclient.RPCClient("{{ zuul_server_host }}", 4730)
job = client.submitJob("cancel:%s" % socket.gethostname(),
                       dict(name=job_name, number=job_number))

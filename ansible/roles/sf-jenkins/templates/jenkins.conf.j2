# Managed by Ansible
<VirtualHost *:{{ jenkins_api_port }}>
    ProxyVia On
    ProxyRequests Off

    ProxyPass /jenkins/ http://127.0.0.1:{{ jenkins_port }}/jenkins/ nocanon retry=1 acquire=3000 timeout=600 Keepalive=On
    ProxyPassReverse /jenkins/ http://127.0.0.1:{{ jenkins_port }}/jenkins/

    ProxyPreserveHost On
    AllowEncodedSlashes NoDecode
    <Proxy *>
        Options FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Proxy>

    <LocationMatch "/jenkins/">
        AuthType basic
        AuthBasicProvider file
        AuthUserFile /etc/httpd/htpasswd
        AuthName "Jenkins"
        Require valid-user
        RewriteEngine On
        RewriteCond %{LA-U:REMOTE_USER} (.+)
        RewriteRule .* - [E=RU:%1,NS]
        RequestHeader set X-Forwarded-User %{RU}e
    </LocationMatch>
</VirtualHost>

<VirtualHost *:{{ jenkins_http_port }}>
    ProxyVia On
    ProxyRequests Off

    ProxyPass /jenkins/ http://127.0.0.1:{{ jenkins_port }}/jenkins/ nocanon retry=1 acquire=3000 timeout=600 Keepalive=On
    ProxyPassReverse /jenkins/ http://127.0.0.1:{{ jenkins_port }}/jenkins/

    ProxyPreserveHost On
    AllowEncodedSlashes NoDecode
    <Proxy *>
        Options FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Proxy>

    <LocationMatch "/jenkins/">
        RequestHeader unset X-Forwarded-User
        <If "%{HTTP_COOKIE} =~ /auth_pubtkt=.*/">
            AuthType mod_auth_pubtkt
            TKTAuthLoginURL /auth/login
            TKTAuthFakeBasicAuth on
            TKTAuthDebug 1
            AuthName "Jenkins"
            require valid-user
	    <If "%{REMOTE_USER} == 'admin'">
                RequestHeader set X-Forwarded-User admin
            </If>
        </If>
    </LocationMatch>
</VirtualHost>
